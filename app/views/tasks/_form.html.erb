<div class="container">
  <%= form_for(@task) do |f| %>
    <div class="form-group"><%= f.label :title %>
    <%= f.text_field :title %></div>
    <div class="form-group"><%= f.label :details %>
    <%= f.text_field :details %></div>
    <div class="form-group check-box"><%= f.label :completed %>
    <%= f.check_box :completed %></div>
    <div class="form-group submit btn"><%= f.submit %></div>
  <% end %>
  <span class="btn back bd"><%= link_to "back to list", tasks_path%></span>
</div>
