<div class="container">
  <h1><%= @task.title %></h1>
  <div class="description">
    <p><%= @task.details %></p>
  </div>
  <% if @task.completed == true %>
    <p><%= "This task is done" %></p>
  <% else %>
    <p><%= "This task is not done yet" %></p>
  <% end %>
  <div class="links">
    <span class="btn edit"><%= link_to "edit task", edit_task_path(@task)%></span>
    <span class="btn back"><%= link_to "back to list", tasks_path%></span>
    <span class="btn delete"><%= link_to "Delete #{@task.title}", task_path(@task), method: :delete %></span>
  </div>
</div>
